<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <title>{{.title}} - Tech Daily</title>

        <!-- Bootstrap -->
        <link rel="stylesheet" href="https://getbootstrap.com/docs/4.0/dist/css/bootstrap.min.css" crossorigin="anonymous">

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://cdn.jsdelivr.net/npm/html5shiv@3.7.3/dist/html5shiv.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/respond.js@1.4.2/dest/respond.min.js"></script>
        <![endif]-->
        <style>
            .box-list h2 {
                font-size: 16px;
            }
        </style>
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-5W5LQPZG9E"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-5W5LQPZG9E');
        </script>
    </head>
<body>
    <div class="container-fluid">
        <div class="header clearfix">
            <h3 class="text-muted"><a href="/">Tech Daily</a></h3>
        </div>
        <div class="row row-offcanvas row-offcanvas-right">
            <div class="col-xs-2 col-sm-2 sidebar-offcanvas" id="sidebar">
                {{range .tags}}
                    <a href="/t/{{.Slug}}" class="badge badge-primary">#{{.Title}}</a>
                {{end}}
            </div>
            <div class="col-xs-10 col-sm-10">
                <div class="row box-list">
                    {{range .pagination.Rows}}
                    <div class="col-xs-12 col-ms-6 col-lg-3">
                        <h2><a href="{{.Link}}" target="_blank">{{.Title}}</a></h2>
                        <a href="{{.Link}}" target="_blank">
                            <img class="img-rounded" style="width: 100%;" src="{{.Image}}" data-holder-rendered="true"></a>
                    </div><!--/.col-xs-6.col-lg-4-->
                    {{end}}
                </div><!--/row-->
                <div class="d-flex justify-content-center align-items-center" style="height:100px;">
                    <nav aria-label="...">
                        <ul class="pagination">
                            {{ $currentPage := .pagination.Page }}
                            {{ $lastPage := .pagination.TotalPages }}
                            {{ $checkTest := .pagination.TotalPages }}
                            {{ $checkShowPage := .pagination.ShowPage }}
                            {{ $checkShowPage1 := .pagination.ShowPage1 }}
                            {{ $checkShowPage2 := .pagination.ShowPage2  }}
                            {{ range $page := .listPage }}
                            {{if le $currentPage 3}}
                            {{if le $page 4}}
                            {{if eq $page $currentPage}}
                            <li class="page-item active">
                                <span class="page-link">{{$page}}</span>
                            </li>
                            {{else}}
                            <li class="page-item">
                                <a href="/t/{{.tag.Slug}}?page={{$page}}" class="page-link">{{ $page }}</a>
                            </li>
                            {{end}}
                            {{else if eq $page $lastPage}}
                            <li class="page-item"><span class="page-link">...</span></li>
                            <li class="page-item">
                                <a href="/t/{{.tag.Slug}}?page={{$page}}" class="page-link">{{ $page }}</a>
                            </li>
                            {{end}}
                            {{else if $checkShowPage}}
                            {{if eq $page 1}}
                            <li class="page-item">
                                <a href="/t/{{.tag.Slug}}?page={{$page}}" class="page-link">{{ $page }}</a>
                            </li>
                            <li class="page-item"><span class="page-link">...</span></li>
                            {{else if $checkShowPage1}}
                            {{if eq $page $currentPage}}
                            <li class="page-item">
                                <span class="page-link">...</span>
                            </li>
                            {{else}}
                            <li class="page-item">
                                <a href="/t/{{.tag.Slug}}?page={{$page}}" class="page-link">{{ $page }}</a>
                            </li>
                            {{end}}
                            {{end}}
                            {{else}}
                            {{if eq $page 1}}
                            <li class="page-item">
                                <a href="/t/{{.tag.Slug}}?page={{$page}}" class="page-link">{{ $page }}</a>
                            </li>
                            <li class="page-item"><span class="page-link">...</span></li>
                            {{else if eq $page $lastPage}}
                            <li class="page-item"><span class="page-link">...</span></li>
                            <li class="page-item">
                                <a href="/t/{{.tag.Slug}}?page={{$page}}" class="page-link">{{ $page }}</a>
                            </li>
                            {{else}}
                            {{if $checkShowPage2}}
                            {{if eq $page $currentPage}}
                            <li class="page-item active">
                                <span class="page-link">{{$page}}</span>
                            </li>
                            {{else}}
                            <li class="page-item">
                                <a href="/t/{{.tag.Slug}}?page={{$page}}" class="page-link">{{ $page }}</a>
                            </li>
                            {{end}}
                            {{end}}
                            {{end}}
                            {{end}}
                            {{end}}
                        </ul>
                    </nav>
                </div>
            </div><!--/.col-xs-12.col-sm-9-->
        </div>
    </div>
</body>
</html>